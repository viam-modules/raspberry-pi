{
    "module_id": "viam:raspberry-pi",
    "visibility": "public",
    "url": "https://github.com/viam-modules/raspberry-pi",
    "description": "Supports Raspberry Pi 4, 3, 2, 1,  Zero W and Zero 2 W and all Raspberry Pi servos.",
    "models": [
      {
        "api": "rdk:component:board",
        "model": "viam:raspberry-pi:rpi"
      },
      {
        "api": "rdk:component:servo",
        "model": "viam:raspberry-pi:pi-servo"
      }
    ],
    "build": {
      "build": "make setup module",
      "path": "bin/raspberry-pi-module.tar.gz",
      "arch" : ["linux/arm64"]
    },
    "entrypoint": "run.sh"
}
